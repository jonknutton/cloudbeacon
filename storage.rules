rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to write to their own paths
    match /post-images/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow any authenticated user to read public images
    match /post-images/{allPaths=**} {
      allow read: if request.auth != null;
    }
    
    // Project header images
    match /project-images/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Fallback: deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
